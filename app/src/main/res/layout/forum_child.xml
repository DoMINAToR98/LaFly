<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:text="Sep 30"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Asked By : Piyush Gupta"
        android:id="@+id/By"

        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How Does it feel When You see your friends getting married and you are not able to find someone for yourself ?"
        android:textColor="#000000"
        android:id="@+id/ques"
        android:textSize="25sp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/ques"
        android:layout_marginTop="13dp"
        android:id="@+id/ansdet"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_account_circle_black_48dp"
            android:id="@+id/ansim"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ansim"
            android:text="Ravi Gupta"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_marginTop="2dp"
            android:id="@+id/ansname"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ansim"
            android:text="Sep 31"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/ansdate"
            />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ansdet"
        android:id="@+id/ans"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:maxLines="3"
        android:text="It had been almost three months since I was talking to this guy I happened to meet at the airport. I was single and so was he. It was evident that both of us had romantic inclination toward each other but it wasn't completely out in the air."
        />




</RelativeLayout>